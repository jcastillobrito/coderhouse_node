doctype html
html(lang='en')
  head
    title Hello, World!
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
  body
    
    div(class="row mt-5")
      div(class="col-md-4 offset-4")
        div(class="card")
          div(class="card-header") Productos
          div(class="card-body")        
            table(class="table table-bordered table-sm")
              thead
                th Titulo
                th Precio
                th(style={'max-width':'100px'}) Thumbnail
              tbody
                each val in array_productos
                  tr
                    td=val.title
                    td=val.price
                    td
                      img(src= val.thumbnail,style={'max-width':'100px'})



          include partials/button.pug