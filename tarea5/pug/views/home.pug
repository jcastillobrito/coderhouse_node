doctype html
html(lang='en')
	head
		title Hello, World!
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
	body
		
		div(class="row mt-5")
			div(class="col-md-4 offset-4")
				form(action="/",method="POST",onsubmit="submitForm(event)")

					div(class="form-group")
						label Titulo :
						input(class="form-control",required,type="text",name="title",placeholder="Ingresar Titulo")

					div(class="form-group")
						label Precio :
						input(class="form-control",required,type="text",name="price",placeholder="Ingresar Precio")

					div(class="form-group")
						label Thumbnail :
						input(class="form-control",required,type="text",name="thumbnail",placeholder="Ingresar Thumbnail")

					button(class="btn btn-block btn-success mt-3",type="submit") Enviar
					include partials/button.pug